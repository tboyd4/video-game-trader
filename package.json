{
  "name": "video-game-trader",
  "version": "1.0.0",
  "description": "Video Game Trading App",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tboyd4/video-game-trader.git"
  },
  "author": "The Squad",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tboyd4/video-game-trader/issues"
  },
  "homepage": "https://github.com/tboyd4/video-game-trader#readme",
  "dependencies": {
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "concurrent": "^0.3.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-favicon": "^2.0.1",
    "express-session": "^1.17.1",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "materialize-css": "^1.0.0",
    "mysql2": "^1.7.0",
    "nodemon": "^2.0.3",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "react-router-dom": "^5.1.2",
    "sequelize": "^5.21.7"
  },
  "devDependencies": {
    "concurrently": "^5.2.0"
  }
}
